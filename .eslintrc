{
    "extends":[
        "airbnb",
        "airbnb/hooks",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "rules": {
        "react/jsx-filename-extensions":[
            1,
            {
                "extensions":[
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prop-types":0,
        "import/imports-first":[
            "error",
            "absolute-first"
        ],
        "import/newline-after-import":"error",
        "import/prefer-default-export":"off",
        "react/jsx-props-no-spreading":"off"
    },
    "globals": {
        "window":true,
        "document":true,
        "localStorage":true,
        "FormData":true,
        "FileReader":true,
        "Blob":true,
        "navigator":true,
        "fetch":true
    }
}